   <!-- ================ -->
   <!-- Limit categories --> 
   <!-- ================ -->


	<category name="com.opensymphony">
      <priority value="WARN"/>
   </category>

	<category name="org.hibernate">
      <priority value="WARN"/>
   </category>

   <!-- Limit the org.apache category to INFO as its DEBUG is verbose -->
   <category name="org.apache">
      <priority value="WARN"/>
   </category>

   <!-- ======================= -->
   <!-- Setup the Root category -->
   <!-- ======================= -->

   <root>
      <level  value="DEBUG" />
      <appender-ref ref="ASYNC"/>
   </root>



</log4j:configuration>
